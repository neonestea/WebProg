@{
    Layout = "";
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <link href="~/css/site.css"
          rel="stylesheet" />
    <title>Янкова А.А. М33091</title>
    <link rel="icon" href="/images/favicon.ico">
    <meta name="keywords" content="Портфолио, обо мне, контакты" />
    <meta name="description" content="Мое портфолию" />
    <script>
        window.onload = function () {
            document.body.classList.add('loaded_hiding');
            window.setTimeout(function () {
                document.body.classList.add('loaded');
                document.body.classList.remove('loaded_hiding');
            }, 500);
        }
    </script>
</head>
<body>
    <div class="preloader">
        <div class="preloader__row">
            <div class="preloader__item"></div>
            <div class="preloader__item"></div>
        </div>
    </div>

    <header>
        <div class="under_header">
            <div class="icon">
                <a href="https://ru.wikipedia.org/wiki/%D0%9E%D0%B2%D1%86%D0%B0" target="_blank"><img src="/images/sheep.png" width="50" height="50" alt="Logo"></a>
                <p class="icon_text">Нажми на меня!</p>
            </div>
            <div class="containerMe">
                <h1>Анастасия Янкова</h1>
                <h4>Типа программист (вроде как)</h4>
            </div>
        </div>

    </header>
    <main>
        <div class="left-main">
            <nav class="container_nav">
                <ul>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <span><img src="/images/home.png" alt="Home" class="nav_icon"></span>
                            <span>Главная</span>
                        </a>
                    </li>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Projects">
                            <span><img src="/images/projects.png" alt="Projects" class="nav_icon"></span>
                            <span>Проекты</span>
                        </a>
                    </li>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Skills">
                            <span><img src="/images/skills.png" alt="Skills" class="nav_icon"></span>
                            <span>Навыки</span>
                        </a>
                    </li>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Education" class="is-active">
                            <span><img src="/images/education.png" alt="Education" class="nav_icon"></span>
                            <span>Образование</span>
                        </a>
                    </li>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Experience">
                            <span><img src="/images/experience.png" alt="Experience" class="nav_icon"></span>
                            <span>Опыт</span>
                        </a>
                    </li>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Gallery">
                            <span><img src="/images/gallery.jpg" alt="Gallery" class="nav_icon"></span>
                            <span>Галерея</span>
                        </a>
                    </li>
                    <li class="view">
                        <a asp-area="" asp-controller="Home" asp-action="Text">
                            <span><img src="/images/smile2.png" alt="Experience" class="nav_icon"></span>
                            <span>Смайлики</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>
        <div class="middle-main">
            <div class="buttons" style="display: inline-block; margin-left:10px;">
                <div class="checkbox">
                    <input id="check1" type="checkbox" name="check" value="check1" onchange='setProf()'>
                    <label for="check1">Среднее</label>
                    <input id="check2" type="checkbox" name="check" value="check2" onchange='setHigh()'>
                    <label for="check2">Высшее</label>
                </div>



            </div>
            <div class="middle-main-flex" style="width: 100%;">
                <div id="prof">
                    <div class="education_card">
                        <h5 class="education-title">Колледж МИД РФ</h5>
                        <h5 class="education-years">2016 &mdash; 2018</h5>
                        <h5 class="educaion_subjects">Направление подготовки</h5>
                        <p class="education-text">
                            специалист документационного обеспечения управления и архивоведения
                        </p>
                        <h5 class="educaion_subjects">Основные предметы</h5>
                        <ol class="education-text">
                            <li>Документационное обеспечение управления</li>
                            <li>Работа с электроннами системами документации</li>
                            <li>Английский язык</li>
                            <li>Стенография</li>
                        </ol>
                    </div>
                </div>
                <div id="high">
                    <div class="education_card">
                        <h5 class="education-title">Университет ИТМО</h5>
                        <h5 class="education-years">2018 &mdash; 2022</h5>
                        <h5 class="educaion_subjects">Направление подготовки</h5>
                        <p class="education-text">
                            интернет-технологии и программирование
                        </p>
                        <h5 class="educaion_subjects">Основные предметы</h5>
                        <ol class="education-text">
                            <li>Программирование</li>
                            <li>
                                <dl>
                                    <dt>Администрирование</dt>
                                    <dd>Windows Server</dd>
                                    <dd>Linux</dd>
                                </dl>
                            </li>
                            <li>Английский язык</li>
                            <li>Математика</li>
                        </ol>
                    </div>
                </div>

            </div>
        </div>
        <div class="right-main">
        </div>

    </main>
    <footer>
        <p class="footer-text">+7 (817) 542-45-46</p>
        <a href="mailto:yankova.nastya@yandex.ru" class="footer-text" title="Нажмите, чтобы отправить">yankova.nastya@yandex.ru</a>
    </footer>
    <script src="~/js/edu.js"></script>
</body>
</html>
